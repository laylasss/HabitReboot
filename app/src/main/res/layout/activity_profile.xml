<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="24sp"
        android:text="Jane Smith"
        android:textAlignment="center"
        android:textColor="#4f4f4f"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="false"
        app:srcCompat="@mipmap/avatar" />


    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="24sp"
        android:text="HR user since April 2017"
        android:textAlignment="center"
        android:textColor="#4f4f4f"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <EditText
        android:id="@+id/editText5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="12dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="24sp"
        android:text="BASIC PROFILE"
        android:textAlignment="viewStart"
        android:textColor="#4f4f4f"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="19dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="12dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/iconavatar" />

        <EditText
            android:id="@+id/editText14"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="Jane Smith"
            android:textAlignment="textStart"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="19dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/information" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="Here's a little bit about me. And so it goes on and on and on."
            android:textAlignment="textStart"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>


    <EditText
        android:id="@+id/editText7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="24sp"
        android:text="PRIVATE INFORMATION"
        android:textAlignment="viewStart"
        android:textColor="#4f4f4f"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="63dp"
            android:layout_height="13dp"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/mail" />

        <EditText
            android:id="@+id/editText8"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="Jane@gmail.com"
            android:textAlignment="textStart"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="52dp"
            android:layout_height="22dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/phone" />

        <EditText
            android:id="@+id/editText9"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="+1 510 486 1234"
            android:textAlignment="textStart"
            android:textColor="#4f4f4f"
            android:textSize="14dp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="43dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@mipmap/female" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="32dp"
            android:background="@null"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="Female"
            android:textAlignment="textStart"
            android:textColor="#4f4f4f"
            android:textSize="14dp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

    <EditText
        android:id="@+id/editText11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:ems="10"
        android:fontFamily="@font/autour_one"
        android:inputType="textMultiLine"
        android:lineSpacingExtra="10sp"
        android:text="CHANGE PASSWORD"
        android:textAlignment="viewStart"
        android:textColor="#4f4f4f"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="monospace" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="53dp"
            android:layout_height="21dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            app:srcCompat="@mipmap/password" />

        <EditText
            android:id="@+id/editText12"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:inputType="textMultiLine"
            android:text="Enter New Password"
            android:textAlignment="viewStart"
            android:textColor="#4f4f4f"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="monospace" />
    </LinearLayout>

</LinearLayout>
