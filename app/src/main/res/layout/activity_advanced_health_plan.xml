<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGreen"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@mipmap/workout"
            android:text="Get Fit!"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ImageButton02"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@mipmap/tower"
            android:text="More Productive!"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ImageButton03"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@mipmap/jumpup"
            android:textColor="#FFFFFF"
            android:text="Boost Confidence!"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textSize="30sp"
            android:textStyle="bold" />/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/ImageButton04"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@mipmap/study"
            android:textColor="#FFFFFF"
            android:text="Learn a skill!"
            android:textAlignment="center"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textSize="30sp"
            android:textStyle="bold" />/>

    </LinearLayout>

</LinearLayout>
