<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:fontFamily="sans-serif"
        android:textSize="20sp"
        android:text="Create Habit"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="119dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/text_border"
        android:fontFamily="sans-serif"
        android:text=" Name a habit "
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="303dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Drink more water"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold"
        android:textColor="#9E9E9E"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="219dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:fontFamily="sans-serif"
        android:text=" Build or out of this habit? "
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Build"
        android:checked="true"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:enabled="false"
        android:text="Quit"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="327dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/text_border"
        android:fontFamily="sans-serif"
        android:text=" How often would you like to do this activity?"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif"
        android:text="Daily"
        android:checked="true"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="sans-serif"
        android:text="Weekly"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:fontFamily="sans-serif"
        android:text="Monthly"
        android:textAlignment="textStart"
        android:textSize="14sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="117dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/text_border"
        android:fontFamily="sans-serif"
        android:text=" Set your goal"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:layout_marginLeft="30dp"
            android:text="8"
            android:layout_marginTop="5dp"
            android:layout_weight="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:text="Or more times per period"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="187dp"
        android:layout_height="35dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border"
        android:fontFamily="sans-serif"
        android:text=" Do you want reminder?"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold" />

    <Switch
        android:id="@+id/switch1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_width="113dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textStyle="bold"
        android:text="Yes" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textStyle="bold"
            android:text="Save" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.5"
            android:fontFamily="sans-serif"
            android:textAppearance="@android:style/TextAppearance.Holo.Widget"
            android:textStyle="bold"
            android:text="Cancel" />
    </LinearLayout>
</LinearLayout>
